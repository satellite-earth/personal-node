{
	"name": "@satellite-earth/personal-node",
	"version": "0.2.2",
	"description": "node is a project that runs as a node application anywhere, i.e. it's just a nodejs app that can run on your laptop or on a VPS in a datacenter, it doesn't matter",
	"license": "MIT",
	"author": {
		"name": "Stuart Bowman",
		"email": "sbowman@satellite.earth"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/satellite-earth/personal-node.git"
	},
	"main": "dist/index.js",
	"type": "module",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./app": {
			"import": "./dist/app/index.js",
			"types": "./dist/app/index.d.ts"
		}
	},
	"scripts": {
		"prepack": "yarn build",
		"start": "node .",
		"dev": "nodemon --loader @swc-node/register/esm src/index.ts",
		"build": "tsc",
		"format": "prettier -w . --ignore-path .gitignore",
		"test": "echo no tests"
	},
	"files": [
		"dist",
		"lib"
	],
	"bin": "dist/index.js",
	"dependencies": {
		"@satellite-earth/core": "^0.2.0",
		"@satellite-earth/web-ui": "^0.2.0",
		"better-sqlite3": "^9.6.0",
		"blossom-client-sdk": "^0.5.1",
		"blossom-server-sdk": "^0.3.1",
		"cors": "^2.8.5",
		"debug": "^4.3.4",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"hyperdht": "^6.14.0",
		"import-meta-resolve": "^4.1.0",
		"lodash.throttle": "^4.1.1",
		"mkdirp": "^3.0.1",
		"nostr-tools": "^2.5.2",
		"process-streams": "^1.0.1",
		"simple-zstd": "^1.4.2",
		"streamx": "^2.16.1",
		"web-push": "^3.6.7",
		"ws": "^8.16.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@swc-node/register": "^1.9.1",
		"@swc/core": "^1.4.17",
		"@types/better-sqlite3": "^7.6.10",
		"@types/debug": "^4.1.12",
		"@types/express": "^4.17.21",
		"@types/node": "^20.12.3",
		"@types/web-push": "^3.6.3",
		"@types/ws": "^8.5.10",
		"nodemon": "^3.1.0",
		"prettier": "^3.2.5",
		"typescript": "^5.4.3"
	},
	"nodemonConfig": {
		"ignore": [
			"data/**"
		],
		"exec": "node",
		"signal": "SIGTERM"
	}
}
